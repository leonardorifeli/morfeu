<!-- Logo -->
<a href="{{ path('dashboard_homepage') }}" class="logo">
    <span class="logo-mini">MF</span>
    <span class="logo-lg">morfeu.finance</span>
</a>

<nav class="navbar navbar-static-top" role="navigation">
    <!-- Sidebar toggle button-->
    <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
        <span class="sr-only">Toggle navigation</span>
    </a>
    <div class="navbar-custom-menu">
        <ul class="nav navbar-nav">

            <li class="dropdown user user-menu">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                    {% if app.user.profile.getImage() is defined and app.user.profile.getImage() is not null %}
                    <img src="{{ image(app.user.profile.getImage()).resize(100,100) }}" class="user-image" alt="User Image"/>
                    {% endif %}
                    <span class="hidden-xs">{{ app.user.name }}</span>
                </a>
                <ul class="dropdown-menu">

                    <li class="user-header">
                        {% if app.user.profile.getImage() is defined and app.user.profile.getImage() is not null %}
                        <img src="{{ image(app.user.profile.getImage()).resize(200,200) }}" class="img-circle" alt="User Image" />
                        {% endif %}
                        <p>
                            {{ app.user.name }}<br/>
                            {{ app.user.email }}
                        </p>
                    </li>

                    <!-- Menu Footer-->
                    <li class="user-footer">
                        <div class="pull-left">
                            <a href="{{ path('profile') }}" class="btn btn-default btn-flat">Perfil</a>
                        </div>

                        <div class="pull-right">
                            <a href="{{ path('login_logout') }}" class="btn btn-default btn-flat">Sair</a>
                        </div>
                    </li>
                </ul>
            </li>

        </ul>
    </div>
</nav>
