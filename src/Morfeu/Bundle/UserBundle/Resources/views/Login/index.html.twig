{% extends 'UserBundle::Base/base.html.twig' %}

{% block body %}

    <div class="login-logo">
        <a href="/" style="color: #333!important;">morfeu.finance</a>
    </div>

    <div class="login-box-body">
        <p class="login-box-msg">
            <!--{% trans %}message-login{% endtrans %}-->
        </p>

        {% if error %}
            <div class="alert alert-danger alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                <h4><i class="icon fa fa-ban"></i> Ops!</h4>
                <br/> {{ error.message|replace({'Bad credentials': 'E-mail e/ou senha inválidos. Verifique.'}) }}
            </div>
        {% endif %}

        <form action="{{ path('login_check') }}" method="post">
            <div class="form-group has-feedback">
                <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control"
                       placeholder="{% trans %}login.placeholder-email{% endtrans %}"/>
                <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
            </div>

            <div class="form-group has-feedback">
                <input type="password" placeholder="{% trans %}login.placeholder-password{% endtrans %}"
                       class="form-control" id="password" name="_password"/>
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            </div>

            <div class="row">
                <div class="col-xs-8">
                    <div class="checkbox icheck">
                    </div>
                </div>

                <div class="col-xs-4">
                    <button type="submit" class="btn btn-block btn-login btn-flat">{% trans %}
                        login.btn-login{% endtrans %}</button>
                </div>
            </div>
        </form>

    </div>
{% endblock %}
