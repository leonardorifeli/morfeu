{% extends 'ThemeBundle::Base/base.html.twig' %}

{% block body %}

    <section class="content-header">
        <h1>
            Perfil
        </h1>

        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Usuário</a></li>
            <li class="active">Perfil</li>
        </ol>
    </section>

    <section class="content">

        <div class="row">
            <div class="col-md-3">

                <div class="box box-primary">
                    <div class="box-body box-profile">
                        {% if profile.getImage() is defined and profile.getImage() is not null %}
                            <img class="profile-user-img img-responsive img-circle"
                                 src="{{ image(app.user.profile.getImage()).resize('100%') }}"
                                 alt="User profile picture">
                        {% endif %}

                        <h3 class="profile-username text-center">
                            {{ app.user.name }}
                        </h3>

                        <p class="text-muted text-center">
                            {{ app.user.email }}
                        </p>

                        <!--
                        <ul class="list-group list-group-unbordered">
                            <li class="list-group-item">
                                <b>Agências</b> <a class="pull-right">1,322</a>
                            </li>

                            <li class="list-group-item">
                                <b>Cartões</b> <a class="pull-right">543</a>
                            </li>

                            <li class="list-group-item">
                                <b>Contas</b> <a class="pull-right">13,287</a>
                            </li>
                        </ul>
                        -->

                    </div>
                </div>
            </div>

            <div class="col-md-9">
                <div class="box box-primary">
                    <div class="box-body box-profile">

                        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

                        {% if message is defined and message is not null %}
                            <div class="alert alert-danger alert-dismissible">
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                                <h4><i class="icon fa fa-ban"></i> Erro</h4>
                                {{ message }}
                            </div>
                        {% endif %}

                        {% if app.request.get('success') is defined and app.request.get('success') == 1 %}
                            <div class="alert alert-success alert-dismissible">
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                                <h4><i class="icon fa fa-check"></i> Successo </h4>
                                Atualizado com sucesso.
                            </div>
                        {% endif %}

                        <div class="box-body">
                            <div class="form-group">
                                {{ form_label(form.photo, 'Imagem', {'label_attr': {'class': 'col-md-3 control-label' }}) }}
                                <div class="col-md-9">
                                    <div class="input-group" style="width: 100%;">
                                        {{ form_widget(form.photo, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form.photo) }}
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                {{ form_label(form.profession, 'Profissão', {'label_attr': {'class': 'col-md-3 control-label' }}) }}
                                <div class="col-md-9">
                                    <div class="input-group" style="width: 100%;">
                                        {{ form_widget(form.profession, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form.profession) }}
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-md-3 control-label">Senha:</label>

                                <div class="col-md-9">
                                    <div class="input-group" style="width: 100%;">
                                        <input type="password" name="password" class="form-control"/>
                                    </div>
                                </div>
                            </div>
                        </div>

                        {{ form_end(form) }}

                    </div>
                </div>
            </div>
        </div>

    </section>

{% endblock %}
