{% extends 'Login/Base/base.html.twig' %}

{% block body %}

<div class="login-logo">
    <a href="#"><b>Morfeu</b>.finance</a> <br/>
</div>

<div class="login-box-body">
    <p class="login-box-msg">
        Faça o login, ou cadastra-se. Sim, é gratuito!

        {% if error %}
        <br/> {{ error }}
        {% endif %}
    </p>

    <form action="{{ path('login_check') }}" method="post">
        <div class="form-group has-feedback">
            <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control" placeholder="E-mail" />
            <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
        </div>

        <div class="form-group has-feedback">
            <input type="password" placeholder="Senha" class="form-control" id="password" name="_password" />
            <span class="glyphicon glyphicon-lock form-control-feedback"></span>
        </div>

        <div class="row">
            <div class="col-xs-8">
                <div class="checkbox icheck">
                    <label>
                        <input type="checkbox"> Lembrar acesso
                    </label>
                </div>
            </div>

            <div class="col-xs-4">
                <button type="submit" class="btn btn-primary btn-block btn-flat">Autenticar</button>
            </div>
        </div>
    </form>

    <a href="#">Esqueci minha senha</a><br>
    <a href="#" class="text-center">Efetuar cadastro</a>

</div>
{% endblock %}
